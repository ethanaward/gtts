#!/usr/bin/make -f


PYVERS = $(shell pyversions -vr)
PYVERSION = $(shell pyversions -vd)
PY3VERS = $(shell py3versions -vr)


%:
	dh $@ --with=python2,python3

override_dh_auto_clean:
	rm -rf $(CURDIR)/build
	dh_auto_clean

override_dh_auto_build:
	set -ex && for pyvers in $(PYVERS) $(PY3VERS); do \
		python$$pyvers setup.py build; \
		python$$pyvers-dbg setup.py build; \
	done

override_dh_auto_install:
	set -ex && for pyvers in $(PYVERS) $(PY3VERS); do \
		python$$pyvers setup.py install --install-layout=deb --root $(CURDIR)/debian/tmp; \
		python$$pyvers-dbg setup.py install --install-layout=deb --root $(CURDIR)/debian/tmp; \
	done

override_dh_install:
	dh_install --list-missing

override_dh_installdocs:
	dh_installdocs
	rm -rf debian/python-gtts-dbg/usr/share/doc/python-gtts-dbg
	ln -s python-gtts debian/python-gtts-dbg/usr/share/doc/python-gtts-dbg

	rm -rf debian/python3-gtts-dbg/usr/share/doc/python3-gtts-dbg
	ln -s python3-gtts debian/python3-gtts-dbg/usr/share/doc/python3-gtts-dbg


override_dh_strip:
	dh_strip -X"python3" --dbg-package=python-gtts-dbg
	dh_strip -X"python2" --dbg-package=python3-gtts-dbg


